<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色（黑色） -->

    <item android:id="@android:id/background">

        <shape>

            <solid android:color="#80B3FF"></solid>

        </shape>

    </item>

    <!-- 设置进度条颜色（白色） -->

    <item android:id="@android:id/progress">

        <clip>
            <shape>

                <gradient
                    android:angle="45"
                    android:endColor="#0E5DFD"
                    android:startColor="#125DFC"></gradient>
            </shape>

        </clip>

    </item>

</layer-list>
